                            <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>No</th>
                                        <th>상태</th>
                                        <th>과목</th>
                                        <th>학년</th>
                                        <th>주소</th>
                                        <th>학생</th>
                                        <th>어머니연락처</th>
                                        <th>아버지연락처</th>
                                        <th>선생님</th>                                        
                                        <th>수업형태</th>
                                        <th>학교</th>
                                        <th>전화상담가</th>
                                        <th>방문상담가</th>
                                        <th>수강료</th>
                                        <th>납입일</th>
                                        <th>납입액</th>
                                        <!-- <th>마지막 수업일</th> -->
                                        <th>전화 온 날</th>
                                        <th>방문 상담일</th>
                                        <th>첫 수업일</th>
                                        <th>수정</th>
                                    </tr>
                                </thead>
                                <tbody>
                                   <% for(let i = 0; i<student.length; i++){ %>
                                    <tr>
                                        <td><%=i+1%></td>
                                        <td><%=student[i].assign_status%></td>
                                        <td><%=student[i].subject %></td>
                                        <td><%=student[i].grade %></td>
                                        <td><%=student[i].address %></td>
                                        <td><%=student[i].s_name %></td>
                                        <td><%=student[i].mother_phone %></td>
                                        <td><%=student[i].father_phone %></td>                                        
                                        <td><%=student[i].t_name %></td>
                                        <td><%=student[i].class_form %></td>
                                        <td><%=student[i].school_name %></td>
                                        <td><%=student[i].called_consultant %></td>
                                        <td><%=student[i].visited_consultant %></td>
                                        <td><%=student[i].fee %></td>
                                        <td><%=student[i].deposit_day %></td>
                                        <td><%=student[i].deposit_fee %></td>
                                        <td><%=student[i].calling_day %></td>
                                        <td><%=student[i].visiting_day %></td>
                                        <td><%=student[i].first_date %></td>
                                        <td><button onclick="location.href='/student/'+<%=student[i].s_id%>+'/'+<%=student[i].e_id%>">수정</button></td>
                                    </tr>
                                   <% } %>
                                </tbody>
                            </table>
