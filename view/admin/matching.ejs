    <div id="page-wrapper">
      <div class="row">
        <div class="col-lg-12">
          <h1 class="page-header">선생님 배정</h1>
        </div>
        <!-- /.col-lg-12 -->
      </div>

      <!-- /.row -->
      <div class="row">
        <div class="col-lg-12">
          <div class="panel panel-default">
            <div class="panel-heading">
              신청 학생 정보
            </div>
            <div class="panel-body">
              <div class="row">
                <div class="col-lg-12">
                  <form role="form">
                    <div class="form-group col-lg-4">
                      <label>이름</label>
                      <input class="form-control" value=<%=student.name%> disabled>
                    </div>
                    <div class="form-group col-lg-4 col-lg-offset-4 col-lg-pull-2">
                      <label>성별</label>
                      <div class="form-group">
                        <label class="radio-inline">
                          <input type="radio" name="optionsRadiosInline1" id="sgender1" value="option1" checked><%=student.gender%>
                        </label>
                      </div>
                    </div>

                    <div class="form-group col-lg-4">
                      <label>주소</label>
                      <div class="form-inline">
                        <select class="form-control" disabled> 
                          <option><%=student.address1%></option>
                        </select>
                        <select class="form-control" disabled> 
                          <option><%=student.address2%></option>
                        </select>
                      </div>
                    </div>

                    <div class="form-group col-lg-8">
                      <label>상세 주소</label>
                      <input class="form-control" value=<%=student.address3%> disabled>
                    </div>
                    <div class="form-group col-lg-4">
                      <label>학교</label>
                      <input class="form-control" value=<%=student.school_name%> disabled>
                    </div>
                    <div class="form-group col-lg-2 col-lg-offset-6 col-lg-pull-6">
                      <label>학년</label>
                      <select class="form-control" disabled>
                        <option><%=student.grade%></option>
                      </select>
                    </div>

                    <div class="form-group col-lg-4">
                      <label>과목</label>
                      <select class="form-control" disabled>
                        <option><%=student.subject%></option>
                      </select>
                    </div>

                    <div class="form-group col-lg-4">
                      <label>수업형태</label>
                      <select class="form-control" disabled>
                        <option><%=student.class_form%></option>
                      </select>
                    </div>

                    <div class="form-group col-lg-12">
                      <label>학생 성향</label>
                      <input type="textarea" class="form-control" value=<%=student.student_memo%> disabled>
                    </div>

                    <div name="schedules" id="schedules">
                      <div class="form-group col-lg-12">
                          <label>희망 요일 및 시간</label> 
                          <div><h4><%=student.regular_date%></h4></div>                         
                        </div>
                    </div>

                    <div class="form-group col-lg-4">
                      <label>첫 수업 희망일</label>
                      <input type="text" class="form-control" value=<%=student.first_date%> disabled>
                    </div>

                    <div class="form-group col-lg-4 col-lg-offset-4 col-lg-pull-4">
                      <label>희망 교재</label>
                      <input type= "text" class="form-control" value=<%=student.book%> disabled>
                    </div>
                  </form>
                </div>
                <!-- /.col-lg-6 (nested) -->
              </div>
              <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
          </div>
          <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
      </div>
      <!-- /.row -->


    </div>
    <div id="page-wrapper">

      <!-- /.row -->
      <div class="row">
        <div class="col-lg-12">
          <div class="panel panel-default">
            <div class="panel-heading">
              신청 선생님 목록
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
              <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                <thead>
                  <tr>
                    <th>No</th>
                    <th>이름</th>
                    <th>성별</th>
                    <th>나이</th>
                    <th>학교</th>
                    <th>학년</th>
                    <th>상태</th>
                    <th>전화번호</th>
                    <th>수업가능 요일/시간</th>
                    <th>배정</th>
                  </tr>
                </thead>                
                <% for(let i = 0; i<teachers.length; i++){ %>
                    <tbody>
                      <tr>
                        <td><%=i+1%></td>
                        <td><%=teachers[i].name%></td>
                        <td><%=teachers[i].gender%></td>
                        <td><%=teachers[i].age%></td>
                        <td><%=teachers[i].university%></td>
                        <td><%=teachers[i].grade%></td>
                        <td><%=teachers[i].univ_status%></td>
                        <td><%=teachers[i].phone%></td>
                        <td><%=teachers[i].available%></td>
                        <td class="center"><button class="matchButton" value=<%=teachers[i].id%>><%=teachers[i].status%></button></td>
                      </tr>
                    </tbody>
                  <% }%>
              </table>
              <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
          </div>
          <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
      </div>
    </div>
