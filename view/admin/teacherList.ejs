                    <th>계좌번호</th>
                  </tr>
                </thead>
                <% for(let i = 0; i<teacher.length; i++){ %>
                  <tbody>
                    <tr>
                      <td><%=teacher[i].t_id%></td>
                      <td><%=teacher[i].employed%></td>
                      <td><%=teacher[i].address1%></td>
                      <td><%=teacher[i].age%></td>
                      <td><%=teacher[i].name%></td>
                      <td><%=teacher[i].gender%></td>
                      <td><%=teacher[i].university%></td>
                      <td><%=teacher[i].grade%></td>
                      <td><%=teacher[i].univ_status%></td>
                      <td><%=teacher[i].profit%></td>
                      <td>
                          <% for(let j = 0; j<teacher[i].payday.length; j++) { %>
                            [<%=teacher[i].payday[j].name%>,<%=teacher[i].payday[j].subject%>]-<%=teacher[i].payday[j].pay_day%>
                            <br>
                            <%}%>
                      </td>
                      <td><%=teacher[i].account_number%></td>
                    </tr>
                  </tbody>
                <% }%>
              </table>
              <!-- /.table-responsive -->
